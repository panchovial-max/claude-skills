# Meta Cloud API Configuration (requires Meta Business verification)
META_BUSINESS_ACCOUNT_ID=your_business_account_id
META_PHONE_NUMBER_ID=your_phone_number_id
META_VERIFY_TOKEN=your_verify_token
META_ACCESS_TOKEN=your_access_token
META_API_VERSION=v18.0

# Twilio WhatsApp Configuration (alternative - no Meta verification needed)
# Get credentials at https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/pvb_chatbot
ENVIRONMENT=development

# Notification Settings
ADMIN_PHONE=your_whatsapp_number
ADMIN_EMAIL=your_email@example.com

# n8n Webhook (for handoff notifications)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/lead-notification

# Notion Integration (optional - for lead sync and content calendar)
NOTION_API_KEY=secret_your_notion_api_key
NOTION_LEADS_DB_ID=your_leads_database_id
NOTION_CONTENT_DB_ID=your_content_calendar_database_id
